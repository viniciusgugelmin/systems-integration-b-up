{
  "name": "systems-integration-b-up",
  "version": "1.0.0",
  "description": "College project at Positivo University",
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/index.js",
    "dev": "npm run dev:load-envs npx ts-node-dev -- src/index.ts -e ts",
    "dev:prisma:studio": "npm run dev:load-envs npx prisma studio",
    "dev:seed": "npm run dev:load-envs prisma db seed",
    "dev:migrate": "npm run dev:load-envs prisma migrate dev",
    "dev:load-envs": "dotenv -e .env.development"
  },
  "dependencies": {
    "axios": "^1.3.5",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^7.2.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "typescript": "^5.0.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^18.13.0",
    "prisma": "^4.13.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0"
  },
  "lint-staged": {
    "**/*": "npx prettier --write --ignore-unknown ./src"
  },
  "prisma": {
    "seed": "npx ts-node prisma/seed.ts"
  }
}
