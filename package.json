{
  "name": "systems-integration-b-up",
  "version": "1.0.0",
  "description": "College project at Positivo University",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "build": "tsc",
    "start": "node ./dist/index.js",
    "dev": "npm run dev:load-envs npx ts-node-dev -- src/index.ts -e ts",
    "dev:prisma:studio": "npm run dev:load-envs npx prisma studio",
    "dev:seed": "npm run dev:load-envs prisma db seed",
    "dev:migrate": "npm run dev:load-envs prisma migrate dev",
    "dev:load-envs": "dotenv -e .env.development"
  },
  "dependencies": {
    "@prisma/client": "^4.12.0",
    "axios": "^1.3.5",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^7.2.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "joi": "^17.9.1",
    "jsonwebtoken": "^9.0.0",
    "prisma": "^4.12.0",
    "typescript": "^5.0.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0"
  },
  "lint-staged": {
    "**/*": "npx prettier --write --ignore-unknown ./src"
  },
  "prisma": {
    "seed": "npx ts-node prisma/seed.ts"
  }
}
